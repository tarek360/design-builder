<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>



    <style name="CustomViewSliderCounterText">
        <item name="android:textColor">@color/current_position_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="WordCardTitleText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WordCardNote">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/note_text</item>
    </style>

    <style name="WordCardDescription">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
